{
  "name": "medifinance-pro-backend",
  "version": "2.0.0",
  "description": "MediFinance Pro v2 - 병원 재무 데이터 자동화 시스템 백엔드",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:classification": "jest tests/engines/ClassificationEngine.test.js",
    "test:calculation": "jest tests/engines/CalculationEngine.test.js",
    "test:integration": "jest tests/integration/",
    "validate-accuracy": "node tests/run-validation.js",
    "validate-classification": "node tests/run-validation.js --classification-only",
    "validate-calculation": "node tests/run-validation.js --calculation-only",
    "validate-workflow": "node tests/run-validation.js --workflow-only",
    "validate-performance": "node tests/run-validation.js --performance-only",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "validate": "npm run lint && npm run test",
    "build": "babel src -d dist",
    "docs": "jsdoc src/ -r -d docs/"
  },
  "keywords": [
    "hospital",
    "finance",
    "automation",
    "excel",
    "classification",
    "healthcare",
    "accounting"
  ],
  "author": "MediFinance Pro Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "pdf-lib": "^1.17.1",
    "rate-limiter-flexible": "^2.4.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jsdoc": "^4.0.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/config/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/medifinance-pro/backend.git"
  },
  "bugs": {
    "url": "https://github.com/medifinance-pro/backend/issues"
  },
  "homepage": "https://github.com/medifinance-pro/backend#readme"
}
